<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SurveyActivity"
        android:background="@drawable/ic_main_background" >

        <TextView
            android:id="@+id/question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:text="Where are you now?" />

        <LinearLayout
            android:id="@+id/option_layout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/question_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/house_button"
                android:layout_width="237dp"
                android:layout_height="50.5dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_house"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/desert_button"
                android:layout_width="237dp"
                android:layout_height="50.5dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_desert"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/forest_button"
                android:layout_width="237dp"
                android:layout_height="50.5dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_forest"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/village_button"
                android:layout_width="237dp"
                android:layout_height="50.5dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_village"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/town_button"
                android:layout_width="237dp"
                android:layout_height="50.5dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_town"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/water_button"
                android:layout_width="237dp"
                android:layout_height="50.5dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_water"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/indicator_one"
            android:layout_width="113dp"
            android:layout_height="42dp"
            android:layout_below="@+id/option_layout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/ic_indicator_one"/>

    </RelativeLayout>

</ScrollView>
